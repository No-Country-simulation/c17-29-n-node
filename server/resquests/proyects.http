*************************
# Environment Variables
*************************

@contentType = application/json
@basepath = api

*************************
## Dev Host
*************************

@hostdev = {{$dotenv HOST_DEV}}
@port = {{$dotenv PORT}}
@dev = http://{{hostdev}}:{{port}}/{{basepath}}

*************************
## Prod Host
*************************

@hostprod = {{$dotenv HOST_PROD}}
@version = v1
@prod = {{hostprod}}/{{basepath}}

*************************
## Token dev mode.
*************************

@tokenDev = {{loginDev.response.body.data.token}}

*************************
## Token prod mode.
*************************

@tokenProd = {{loginProd.response.body.data.token}}

*************************
## Api Key.
*************************

@apiKey = {{$dotenv API_KEY}}

*************************
## Id dev mode.
*************************

@idUserDev = {{getAllUsersDev.response.body.data.users[0]._id}}
@idCarDev = {{getAllCarsDev.response.body.data.cars[0]._id}}
@idTravelDev = {{getAllTravelsDev.response.body.data.travels[0]._id}}

*************************
## Id prod mode.
*************************

@idUserProd = {{getAllUsersProd.response.body.data.users[1]._id}}
@idCarProd = {{getAllCarsProd.response.body.data.cars[0]._id}}
@idTravelProd = {{getAllTravelsProd.response.body.data.travels[0]._id}}

*************************
# Endpoints
*************************

----------------------------------------------
## Docs Route
----------------------------------------------

### dev mode
# @name docsDev
GET {{dev}}/docs

### prod mode.
# @name docsProd
GET {{prod}}/docs HTTP/1.1

----------------------------------------------
## Inavlod route
----------------------------------------------

### dev mode
# @name invalidDev
GET {{dev}}

### prod mode.
# @name invalidProd
GET {{prod}} HTTP/1.1

----------------------------------------------
## Start Route
----------------------------------------------

### dev mode
# @name startDev
GET {{dev}}/

### prod mode.
# @name startProd
GET {{prod}}/ HTTP/1.1

----------------------------------------------
## Auth Route
----------------------------------------------

*************************
## Profile
*************************

### dev mode.
# @name profileDev
GET {{dev}}/auth/profile HTTP/1.1
apikey: {{apiKey}}
Authorization: Bearer {{tokenDev}}

### prod mode.
# @name profileProd
GET {{prod}}/auth/profile HTTP/1.1
apikey: {{apiKey}}
Authorization: Bearer {{tokenProd}}

